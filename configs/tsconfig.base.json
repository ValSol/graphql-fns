{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "../src",
    "sourceMap": true,
    "strictNullChecks": false, // TODO change to "true" and correct all errors )
    "target": "esnext",
    "types": ["jest", "node"]
  },
  "include": ["../src/**/*"],
  "exclude": ["../src/**/*.test.ts", "../src/**/*.mtest.ts", "../src/**/*.auxiliary.ts"]
}
